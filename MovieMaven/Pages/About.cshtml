@page
@model AboutModel
@{
    ViewData["Title"] = "About";
}
<h2>@ViewData["Title"]</h2>
<h3>@Model.Message</h3>

<p>Use this area to provide additional information.</p>

<link rel="stylesheet" href="~/css/style.css">

<div id="posters">
    <form method="post" asp-page-handler="Details">
        <div class="container">
            <h1>Use Bootstrap's carousel to show multiple items per slide.</h1>
            <div class="row">
                <div class="col-md-12">
                    <div class="carousel slide multi-item-carousel" id="theCarousel">
                        <div class="carousel-inner">
                            <!-- add  more items here -->
                            @for (int i = 0; i < @Program.posterSet.results.Count; i++)
                            {
                                string active = null;
                                if (i == 0)
                                {
                                    active = "item active";
                                }
                                else
                                {
                                    active = "item";
                                }
                                @if (@Program.posterSet.results[i].poster_path != null)
                                {
                                    <div class="@active">
                                        <div class="col-xs-4">

                                            <div class="card pull-left">
                                                @{string path = "https://image.tmdb.org/t/p/w500" +
                                                          @Program.posterSet.results[i].poster_path; }
                                                <img src="@path" class="card-img-top thumbs" alt="..." style="min-height: 380px">
                                                <div class="card-body">
                                                    <p class="card-text" style="width: 250px; height: 200px; overflow-y: scroll;">
                                                        @Program.posterSet.results[i].overview;
                                                    </p>
                                                </div>
                                                <div class="card-body">
                                                    <button type="submit" name="movieID" class="btn btn-primary" value="@Program.posterSet.results[i].id.ToString()">See more...</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            <!--  Example item end -->
                        </div>
                        <a class="left carousel-control" href="#theCarousel" data-slide="prev"><i class="glyphicon glyphicon-chevron-left"></i></a>
                        <a class="right carousel-control" href="#theCarousel" data-slide="next"><i class="glyphicon glyphicon-chevron-right"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>